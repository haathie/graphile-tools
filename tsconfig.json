{
  "compilerOptions": {
    "lib": ["ES2022"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "outDir": "lib",
    "strict": true,
    "erasableSyntaxOnly": true,
    "rewriteRelativeImportExtensions": true,
    "rootDir": "src",
    "allowJs": true
  },
  "include": [
    "src/*.ts", 
    "src/graphile.config.ts",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
