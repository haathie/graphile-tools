{
  "compilerOptions": {
    "lib": ["ES2022"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "outDir": "lib",
    "strict": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true,
    "rewriteRelativeImportExtensions": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {},
    "declaration": true
  },
  "exclude": [
    "src",
    "node_modules"
  ]
}
